<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Resumes</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

<div class="container">
    <h1>Resumes</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Position</th>
                <th>Summary</th>
                <th>Degree</th>
                <th>College</th>
                <th>University</th>
                <th>Company Name</th>
                <th>Experience</th>
                <th>Experience Summary</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <% @resumes.each do |resume| %>
                <tr>
                    <td><%= resume.name %></td>
                    <td><%= resume.position %></td>
                    <td><%= resume.summary %></td>
                    <td><%= resume.degree %></td>
                    <td><%= resume.college %></td>
                    <td><%= resume.university %></td>
                    <td><%= resume.company_name %></td>
                    <td><%= resume.experience %></td>
                    <td><%= resume.experience_summary %></td>
                    <td>
                        <%= link_to 'Show', resume, class: 'btn btn-primary btn-sm' %>
                        <%= link_to 'Edit', edit_resume_path(resume), class: 'btn btn-secondary btn-sm' %>
                        <%= link_to 'Destroy', resume, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>

    <%= link_to 'New Resume', new_resume_path, class: 'btn btn-success' %>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
